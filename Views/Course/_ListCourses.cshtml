@model PageList<GetCourseDTO>

@{
    GetCourseDTO p = null;
}
<style>
    .bg-label-success {
        background-color: #e8fadf !important;
        color: #71dd37 !important;
        font-size: 11px;
        font-weight: 600;
    }

    .bg-label-secondary {
        background-color: #e4e6e8 !important;
        color: #8592a3;
        font-size: 11px;
        font-weight: 600;
    }

    .bg-label-warning {
        background-color: #fff3cd !important;
        color: #856404;
        font-size: 11px;
        font-weight: 600;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th class="mcol-50">N<sup>o</sup></th>
            <th>Course Code</th>
            <th>Course Name</th>
            <th>Level</th>
            <th>Age Group</th>
            <th>Duration</th>
            <th>Base Fee</th>
            <th>Status</th>
            <th class="text-end mcol-200">Actions</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">
        @{
            var i = Model.Paging.StartRowNo;
        }
        @foreach (var m in Model)
        {
        <tr>
            <td>@i</td>
            <td>@m.CourseCode</td>
            <td>@m.CourseName</td>
            <td>@m.LevelName</td>
            <td>@m.AgeGroup</td>
            <td>@m.DurationWeeks weeks</td>
            <td>$@m.BaseFee.ToString("N2")</td>
            <td>
                @if (m.Status == "Active")
                {
                    <span class="badge bg-label-success text-capitalized">Active</span>
                }
                else if (m.Status == "Draft")
                {
                    <span class="badge bg-label-warning text-capitalized">Draft</span>
                }
                else
                {
                    <span class="badge bg-label-secondary text-capitalized">@m.Status</span>
                }
            </td>
            <td class="text-end">
                <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" modal-popup="" modal-size="xl" asp-action="EditCourse" asp-controller="Course" asp-route-id="@m.CourseId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                        <a class="dropdown-item text-info" modal-popup="" asp-action="DuplicateCourse" asp-controller="Course" asp-route-id="@m.CourseId"><i class="bx bx-copy me-1"></i> Duplicate</a>
                        <a class="dropdown-item text-danger" modal-popup="" asp-action="DeleteCourse" asp-controller="Course" asp-route-id="@m.CourseId"><i class="bx bx-trash me-1"></i> Delete</a>
                    </div>
                </div>
            </td>
        </tr>
        i++;
        }

    </tbody>
</table>

@await Html.PartialAsync("_pageList", Model.Paging)
