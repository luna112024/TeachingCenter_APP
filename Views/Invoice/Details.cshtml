@model hongWenAPP.Models.InvoiceModel.DTOs.GetInvoiceDetailDTO
@{
    ViewData["Title"] = $"Invoice {Model.InvoiceNumber}";
    var statusClass = Model.Status switch
    {
        "Paid" => "success",
        "Overdue" => "danger",
        "PartiallyPaid" => "warning",
        "Issued" => "info",
        "Draft" => "secondary",
        "Voided" => "dark",
        _ => "secondary"
    };
}

<div class="fluid-container flex-grow-1">
    <nav class="pt-sm-3 pb-1" aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="index" asp-controller="home">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="index" asp-controller="Invoice">Invoices</a></li>
            <li class="breadcrumb-item active">@Model.InvoiceNumber</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Invoice Header -->
        <div class="col-xl-9 col-md-8">
            <div class="card invoice-preview-card">
                <div class="card-body">
                    <!-- Header -->
                    <div class="d-flex justify-content-between flex-xl-row flex-md-column flex-sm-row flex-column m-sm-3 m-0">
                        <div class="mb-xl-0 mb-4">
                            <h4 class="mb-2">Invoice @Model.InvoiceNumber</h4>
                            <div class="mb-1">
                                <span>Student:</span>
                                <span class="fw-semibold">@Model.StudentName (@Model.StudentCode)</span>
                            </div>
                            <div class="mb-1">
                                <span>Course:</span>
                                <span class="fw-semibold">@Model.CourseName</span>
                            </div>
                            <div class="mb-1">
                                <span>Term:</span>
                                <span class="fw-semibold">@Model.TermName</span>
                            </div>
                        </div>
                        <div>
                            <div class="mb-2">
                                <span class="badge bg-@statusClass fs-6">@Model.Status</span>
                            </div>
                            <p class="mb-1">Invoice Date: <span class="fw-semibold">@Model.InvoiceDate.ToString("MMM dd, yyyy")</span></p>
                            <p class="mb-1">Due Date: <span class="fw-semibold">@Model.DueDate.ToString("MMM dd, yyyy")</span></p>
                            @if (Model.Status == "Overdue")
                            {
                                <p class="mb-1 text-danger">
                                    <i class="bx bx-error-circle"></i>
                                    Overdue by @((DateTime.Now - Model.DueDate).Days) days
                                </p>
                            }
                        </div>
                    </div>

                    <hr class="my-3 mx-n4" />

                    <!-- Line Items -->
                    <div class="row p-sm-3 p-0">
                        <div class="col-md-12">
                            <h6>Line Items</h6>
                            <div class="table-responsive">
                                <table class="table border-top m-0">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Description</th>
                                            <th>Qty</th>
                                            <th>Unit Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.LineItems)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>@item.ItemName</strong>
                                                    @if (item.ItemType == "Course")
                                                    {
                                                        <span class="badge bg-primary ms-2">Course</span>
                                                    }
                                                    else if (item.ItemType == "LateFee")
                                                    {
                                                        <span class="badge bg-danger ms-2">Late Fee</span>
                                                    }
                                                    else if (item.ItemType == "Supply")
                                                    {
                                                        <span class="badge bg-info ms-2">Supply</span>
                                                    }
                                                    @if (item.IsMandatory)
                                                    {
                                                        <i class="bx bx-star text-warning" title="Mandatory"></i>
                                                    }
                                                </td>
                                                <td>@item.Description</td>
                                                <td>@item.Quantity</td>
                                                <td>$@item.UnitPrice.ToString("N2")</td>
                                                <td>$@item.LineTotal.ToString("N2")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Totals -->
                        <div class="col-12">
                            <div class="d-flex justify-content-end mt-3">
                                <div class="invoice-calculations">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="w-px-100">Subtotal:</span>
                                        <span class="fw-semibold">$@Model.Subtotal.ToString("N2")</span>
                                    </div>
                                    @if (Model.DiscountAmount > 0)
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="w-px-100">Discount:</span>
                                            <span class="fw-semibold text-success">-$@Model.DiscountAmount.ToString("N2")</span>
                                        </div>
                                    }
                                    @if (Model.LateFeeAmount > 0)
                                    {
                                        <div class="d-flex justify-content-between mb-2">
                                            <span class="w-px-100">Late Fee:</span>
                                            <span class="fw-semibold text-danger">+$@Model.LateFeeAmount.ToString("N2")</span>
                                        </div>
                                    }
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <span class="w-px-100 fw-semibold">Total:</span>
                                        <span class="fw-semibold fs-5">$@Model.TotalAmount.ToString("N2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span class="w-px-100">Amount Paid:</span>
                                        <span class="fw-semibold text-success">$@Model.AmountPaid.ToString("N2")</span>
                                    </div>
                                    <div class="d-flex justify-content-between">
                                        <span class="w-px-100 fw-semibold">Outstanding:</span>
                                        <span class="fw-semibold fs-5 @(Model.AmountOutstanding > 0 ? "text-danger" : "text-success")">
                                            $@Model.AmountOutstanding.ToString("N2")
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Payments -->
                    @if (Model.Payments.Any())
                    {
                        <hr class="my-3 mx-n4" />
                        <div class="row p-sm-3 p-0">
                            <div class="col-md-12">
                                <h6>Payment History</h6>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>Payment Reference</th>
                                                <th>Date</th>
                                                <th>Method</th>
                                                <th>Amount</th>
                                                <th>Status</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var payment in Model.Payments)
                                            {
                                                <tr>
                                                    <td>
                                                        <a href="@Url.Action("Details", "PaymentNew", new { paymentId = payment.PaymentId })">
                                                            @payment.PaymentReference
                                                        </a>
                                                    </td>
                                                    <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                                    <td>@payment.PaymentMethod</td>
                                                    <td>$@payment.Amount.ToString("N2")</td>
                                                    <td>
                                                        <span class="badge bg-@(payment.Status == "Confirmed" ? "success" : "warning")">
                                                            @payment.Status
                                                        </span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Notes -->
                    @if (!string.IsNullOrEmpty(Model.Notes))
                    {
                        <hr class="my-3 mx-n4" />
                        <div class="row p-sm-3 p-0">
                            <div class="col-md-12">
                                <h6>Notes</h6>
                                <p class="mb-0">@Model.Notes</p>
                            </div>
                        </div>
                    }

                    <!-- Actions -->
                    <div class="card-body mx-n4 mt-3">
                        <div class="row">
                            <div class="col-12">
                                @if (Model.AmountOutstanding > 0 && Model.Status != "Voided")
                                {
                                    <a href="@Url.Action("RecordPayment", "PaymentNew", new { invoiceId = Model.InvoiceId })" 
                                       class="btn btn-primary me-2" modal-popup="" modal-size="lg">
                                        <i class="bx bx-dollar"></i> Record Payment
                                    </a>
                                }
                                @if (Model.Status == "Draft")
                                {
                                    <a href="@Url.Action("AddLineItem", "Invoice", new { invoiceId = Model.InvoiceId })" 
                                       class="btn btn-outline-secondary me-2" modal-popup="">
                                        <i class="bx bx-list-plus"></i> Add Line Item
                                    </a>
                                    <a href="@Url.Action("ApplyDiscount", "Invoice", new { invoiceId = Model.InvoiceId })" 
                                       class="btn btn-outline-secondary me-2" modal-popup="">
                                        <i class="bx bx-purchase-tag"></i> Apply Discount
                                    </a>
                                }
                                <a href="@Url.Action("Index", "Invoice")" class="btn btn-outline-secondary">
                                    <i class="bx bx-arrow-back"></i> Back to Invoices
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Invoice Summary Sidebar -->
        <div class="col-xl-3 col-md-4 col-12">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Quick Actions</h5>
                    <div class="d-grid gap-2">
                        @if (Model.AmountOutstanding > 0 && Model.Status != "Voided")
                        {
                            <a href="@Url.Action("RecordPayment", "PaymentNew", new { invoiceId = Model.InvoiceId })" 
                               class="btn btn-primary" modal-popup="" modal-size="lg">
                                <i class="bx bx-dollar"></i> Record Payment
                            </a>
                        }
                        <button type="button" class="btn btn-outline-secondary" onclick="window.print()">
                            <i class="bx bx-printer"></i> Print Invoice
                        </button>
                        <a href="@Url.Action("StudentInvoices", "Invoice", new { studentId = Model.StudentId })" 
                           class="btn btn-outline-secondary">
                            <i class="bx bx-user"></i> Student Invoices
                        </a>
                    </div>
                </div>
            </div>

            <!-- Invoice Info -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">Invoice Information</h5>
                    <div class="mb-2">
                        <small class="text-muted d-block">Invoice Type</small>
                        <span class="badge bg-primary">@Model.InvoiceType</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Status</small>
                        <span class="badge bg-@statusClass">@Model.Status</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Total Amount</small>
                        <h4 class="mb-0">$@Model.TotalAmount.ToString("N2")</h4>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Amount Paid</small>
                        <h5 class="mb-0 text-success">$@Model.AmountPaid.ToString("N2")</h5>
                    </div>
                    <div class="mb-2">
                        <small class="text-muted d-block">Outstanding</small>
                        <h5 class="mb-0 @(Model.AmountOutstanding > 0 ? "text-danger" : "text-success")">
                            $@Model.AmountOutstanding.ToString("N2")
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add print-friendly styles
        window.addEventListener('beforeprint', function () {
            document.querySelector('.invoice-preview-card').classList.add('border-0');
        });
    </script>
}

