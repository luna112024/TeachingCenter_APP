@model hongWenAPP.Models.InvoiceModel.DTOs.AddInvoiceLineItemDTO

@{
    var invoiceId = ViewBag.InvoiceId as Guid?;
    var supplies = ViewBag.Supplies as IEnumerable<hongWenAPP.Models.SupplyModel.DTOs.GetSupplyDTO>;
}

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bx bx-list-plus me-2"></i>Add Line Item to Invoice
    </h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<form id="addLineItemForm" asp-action="AddLineItem" asp-controller="Invoice" asp-route-invoiceId="@invoiceId" method="post">
    <div class="modal-body">
        <div class="alert alert-info">
            <i class="bx bx-info-circle me-2"></i>
            <strong>Note:</strong> Add custom items like supplies, materials, or special fees to this invoice.
        </div>

        <!-- Item Type Selection -->
        <div class="mb-3">
            <label for="itemTypeSelect" class="form-label">Item Type <span class="text-danger">*</span></label>
            <select asp-for="ItemType" id="itemTypeSelect" class="form-select" required>
                <option value="">-- Select Item Type --</option>
                <option value="Supply">Supply/Material</option>
                <option value="Fee">Fee/Charge</option>
                <option value="Service">Service</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="ItemType" class="text-danger"></span>
        </div>

        <!-- Supply Selection (shown when Supply is selected) -->
        <div id="supplySelection" class="mb-3" style="display: none;">
            <label for="supplySelect" class="form-label">Select Supply</label>
            <select id="supplySelect" class="form-select">
                <option value="">-- Select a Supply --</option>
                @if (supplies != null)
                {
                    foreach (var supply in supplies)
                    {
                        <option value="@supply.SupplyId" 
                                data-code="@supply.SupplyCode" 
                                data-name="@supply.SupplyName" 
                                data-price="@supply.UnitPrice"
                                data-description="@supply.Description">
                            @supply.SupplyName (@supply.SupplyCode) - $@supply.UnitPrice.ToString("N2")
                        </option>
                    }
                }
            </select>
        </div>

        <div class="row">
            <!-- Item Code -->
            <div class="col-md-4 mb-3">
                <label asp-for="ItemCode" class="form-label">Item Code</label>
                <input asp-for="ItemCode" id="itemCode" class="form-control" placeholder="Optional" />
                <span asp-validation-for="ItemCode" class="text-danger"></span>
            </div>

            <!-- Item Name -->
            <div class="col-md-8 mb-3">
                <label asp-for="ItemName" class="form-label">Item Name <span class="text-danger">*</span></label>
                <input asp-for="ItemName" id="itemName" class="form-control" placeholder="Enter item name" required />
                <span asp-validation-for="ItemName" class="text-danger"></span>
            </div>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" id="itemDescription" class="form-control" rows="2" placeholder="Optional description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row">
            <!-- Quantity -->
            <div class="col-md-4 mb-3">
                <label asp-for="Quantity" class="form-label">Quantity <span class="text-danger">*</span></label>
                <input asp-for="Quantity" type="number" id="quantity" class="form-control" min="1" value="1" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Unit Price -->
            <div class="col-md-4 mb-3">
                <label asp-for="UnitPrice" class="form-label">Unit Price <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="UnitPrice" type="number" id="unitPrice" class="form-control" step="0.01" min="0" placeholder="0.00" required />
                </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <!-- Line Total (Calculated) -->
            <div class="col-md-4 mb-3">
                <label class="form-label">Line Total</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" id="lineTotal" class="form-control" value="0.00" readonly />
                </div>
            </div>
        </div>

        <!-- Is Mandatory -->
        <div class="form-check mb-3">
            <input asp-for="IsMandatory" class="form-check-input" type="checkbox" id="isMandatory" />
            <label asp-for="IsMandatory" class="form-check-label" for="isMandatory">
                This is a mandatory item (cannot be removed later)
            </label>
        </div>

        <!-- Hidden field for ItemId -->
        <input asp-for="ItemId" type="hidden" id="itemId" />
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bx bx-x me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            <i class="bx bx-plus me-1"></i>Add Line Item
        </button>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Show/hide supply selection based on item type
            $('#itemTypeSelect').on('change', function () {
                if ($(this).val() === 'Supply') {
                    $('#supplySelection').show();
                } else {
                    $('#supplySelection').hide();
                    $('#supplySelect').val('');
                }
            });

            // Auto-fill from supply selection
            $('#supplySelect').on('change', function () {
                var selectedOption = $(this).find('option:selected');
                if (selectedOption.val()) {
                    $('#itemId').val(selectedOption.val());
                    $('#itemCode').val(selectedOption.data('code'));
                    $('#itemName').val(selectedOption.data('name'));
                    $('#unitPrice').val(selectedOption.data('price'));
                    $('#itemDescription').val(selectedOption.data('description'));
                    calculateLineTotal();
                }
            });

            // Calculate line total on quantity or unit price change
            $('#quantity, #unitPrice').on('input', function () {
                calculateLineTotal();
            });

            function calculateLineTotal() {
                var quantity = parseFloat($('#quantity').val()) || 0;
                var unitPrice = parseFloat($('#unitPrice').val()) || 0;
                var lineTotal = quantity * unitPrice;
                $('#lineTotal').val(lineTotal.toFixed(2));
            }

            // Form submission
            $('#addLineItemForm').on('submit', function (e) {
                e.preventDefault();

                var formData = $(this).serialize();
                var actionUrl = $(this).attr('action');

                $.ajax({
                    url: actionUrl,
                    type: 'POST',
                    data: formData,
                    success: function (response) {
                        if (response.flag) {
                            toastr.success(response.message || 'Line item added successfully');
                            $('.modal').modal('hide');
                            location.reload(); // Refresh to show updated invoice
                        } else {
                            toastr.error(response.message || 'Failed to add line item');
                        }
                    },
                    error: function () {
                        toastr.error('An error occurred while adding the line item');
                    }
                });
            });

            // Initialize line total calculation
            calculateLineTotal();
        });
    </script>
}

