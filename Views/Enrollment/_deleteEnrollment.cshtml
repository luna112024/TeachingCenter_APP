@model GetEnrollmentDTO

<form asp-action="DeleteEnrollmentConfirmed" asp-controller="Enrollment" method="post" autocomplete="off">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete Enrollment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input name="EnrollmentId" value="@Model.EnrollmentId" type="hidden" />
        <div class="alert alert-warning" role="alert">
            <h6 class="alert-heading"><i class="bx bx-error-circle me-2"></i>Warning!</h6>
            <p class="mb-0">Are you sure you want to delete this enrollment? This action cannot be undone.</p>
        </div>
        <div class="row g-3">
            <div class="col-12 mb-3">
                <label class="form-label fw-semibold">Student</label>
                <div class="form-control-plaintext">
                    <strong>@(Model.StudentName ?? "-")</strong>
                </div>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold">Course</label>
                <div class="form-control-plaintext">
                    <strong>@(Model.CourseName ?? "-")</strong>
                </div>
            </div>
            <div class="col-6 mb-3">
                <label class="form-label fw-semibold">Section</label>
                <div class="form-control-plaintext">
                    <strong>@(Model.SectionName ?? "-")</strong>
                </div>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12 mb-3">
                <label class="form-label fw-semibold">Status</label>
                <div class="form-control-plaintext">
                    @switch (Model.Status?.ToLower())
                    {
                        case "enrolled":
                        case "active":
                            <span class="badge bg-success">@Model.Status</span>
                            break;
                        case "completed":
                            <span class="badge bg-primary">Completed</span>
                            break;
                        case "dropped":
                            <span class="badge bg-danger">Dropped</span>
                            break;
                        case "failed":
                            <span class="badge bg-danger">Failed</span>
                            break;
                        case "transferred":
                            <span class="badge bg-info">Transferred</span>
                            break;
                        default:
                            <span class="badge bg-secondary">@Model.Status</span>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1"></i>Cancel</button>
        <button type="submit" class="btn btn-danger"><i class="bx bx-trash me-1"></i>Delete</button>
    </div>
</form>
