@model UpdateClassroomDTO

<form asp-action="EditClassroom" asp-controller="Classroom" method="post" autocomplete="off" data-ajax="true"
      data-ajax-method="POST" data-ajax-complete="Success">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Edit Classroom</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <input type="hidden" asp-for="ClassroomId" />
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="RoomCode">Room Code<span class="text-danger">*</span></label>
                <input asp-for="RoomCode" type="text" class="form-control" required placeholder="e.g., A101, B205, LAB1"/>
                <span asp-validation-for="RoomCode" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="RoomName">Room Name<span class="text-danger">*</span></label>
                <input asp-for="RoomName" type="text" class="form-control" required placeholder="e.g., Classroom A101, Computer Lab"/>
                <span asp-validation-for="RoomName" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="Building">Building</label>
                <input asp-for="Building" type="text" class="form-control" placeholder="e.g., Main Building, Annex A"/>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="FloorLevel">Floor Level</label>
                <input asp-for="FloorLevel" type="number" class="form-control" min="0" placeholder="e.g., 1, 2, 3"/>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="Capacity">Capacity<span class="text-danger">*</span></label>
                <input asp-for="Capacity" type="number" class="form-control" required min="1" placeholder="e.g., 30, 50"/>
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="Status">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Available">Available</option>
                    <option value="Occupied">Occupied</option>
                    <option value="Maintenance">Maintenance</option>
                    <option value="Reserved">Reserved</option>
                </select>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-4 mb-2">
                <label class="form-label" asp-for="Equipment">Equipment</label>
                <textarea asp-for="Equipment" class="form-control" rows="2" placeholder="e.g., Projector, Whiteboard, Computer, Air Conditioning"></textarea>
            </div>
            <div class="col-4 mb-2">
                <label class="form-label" asp-for="Facilities">Facilities</label>
                <textarea asp-for="Facilities" class="form-control" rows="2" placeholder="e.g., WiFi, Power outlets, Storage cabinets"></textarea>
            </div>
            <div class="col-4 mb-2">
                <label class="form-label" asp-for="LocationNotes">Location Notes</label>
                <textarea asp-for="LocationNotes" class="form-control" rows="2" placeholder="Additional location information or special instructions"></textarea>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1"></i>Close</button>
        <button type="submit" class="btn btn-primary"><i class="bx bx-save me-1"></i>Save Changes</button>
    </div>
</form>
