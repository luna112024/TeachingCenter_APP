@model List<hongWenAPP.Models.SupplyModel.DTOs.GetSupplyDTO>

<table class="table table-hover">
    <thead class="table-light">
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Category</th>
            <th>Unit Price</th>
            <th>Applicable Levels</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="7" class="text-center">No supplies found</td>
            </tr>
        }
        else
        {
            foreach (var supply in Model)
            {
                <tr>
                    <td><strong>@supply.SupplyCode</strong></td>
                    <td>@supply.SupplyName</td>
                    <td>
                        <span class="badge bg-info">@supply.Category</span>
                    </td>
                    <td><strong>$@supply.UnitPrice.ToString("N2")</strong></td>
                    <td>
                        <small class="text-muted">@(supply.ApplicableLevels ?? "All Levels")</small>
                    </td>
                    <td>
                        <span class="badge bg-@(supply.Status == "Active" ? "success" : "secondary")">
                            @supply.Status
                        </span>
                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="@Url.Action("EditSupply", "Supply", new { id = supply.SupplyId })" modal-popup="">
                                    <i class="bx bx-edit me-1"></i> Edit
                                </a>
                                <form asp-action="DeleteSupply" asp-controller="Supply" method="post" style="display:inline;" 
                                      onsubmit="return confirm('Are you sure you want to delete this supply?')">
                                    <input type="hidden" name="id" value="@supply.SupplyId" />
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bx bx-trash me-1"></i> Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (Model != null && Model.Any())
{
    <div class="text-muted mt-2">
        Total: @Model.Count supply item(s)
    </div>
}

