@model hongWenAPP.Models.SupplyModel.DTOs.CreateSupplyDTO

<form asp-action="AddSupply" asp-controller="Supply" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Add New Supply</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Supply Code <span class="text-danger">*</span></label>
                <input asp-for="SupplyCode" type="text" class="form-control" placeholder="e.g., TXT-HSK1-001" required />
                <span asp-validation-for="SupplyCode" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Category <span class="text-danger">*</span></label>
                <select asp-for="Category" class="form-select" required>
                    <option value="">Select Category</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category">@category</option>
                        }
                    }
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label">Supply Name <span class="text-danger">*</span></label>
                <input asp-for="SupplyName" type="text" class="form-control" placeholder="e.g., HSK 1 Standard Textbook" required />
                <span asp-validation-for="SupplyName" class="text-danger"></span>
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Detailed description..."></textarea>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Unit Price <span class="text-danger">*</span></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="UnitPrice" type="number" step="0.01" class="form-control" required />
                </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>

            <div class="col-md-12 mb-3">
                <label class="form-label">Applicable Levels</label>
                <input asp-for="ApplicableLevels" type="text" class="form-control" placeholder="e.g., HSK 1, HSK 2, Beginner" />
                <small class="text-muted">Comma-separated list of levels this supply applies to</small>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bx bx-save"></i> Save Supply
        </button>
    </div>
</form>

