@model UserUpdateDTO

<form asp-action="DeleteUserConfirmed" asp-controller="Identity" method="post" autocomplete="off">
    <input type="hidden" asp-for="UserId" />
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Deactivate User Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div>
            <strong>Are you sure you want to deactivate this User?</strong>
            <p class="mt-2">
                Username: <strong>@Model.UserName</strong><br />
                Email: <strong>@Model.Email</strong><br />
                Status: <span class="badge @(Model.Status ? "bg-label-success" : "bg-label-secondary")">@(Model.Status ? "Active" : "Inactive")</span>
            </p>
            <div class="alert alert-info mt-3">
                <i class="bx bx-info-circle me-2"></i>
                <strong>Note:</strong> This will deactivate the user account. The user will no longer be able to login, but their data will be preserved and can be restored later if needed.
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bx bx-x-circle me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="bx bx-user-x me-1"></i>Deactivate
        </button>
    </div>
</form> 