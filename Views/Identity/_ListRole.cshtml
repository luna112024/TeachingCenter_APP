@model PageList<GetRoleDTO>

@{
    GetRoleDTO r = null;
}
<table class="table">
    <thead>
        <tr>
            <th class="mcol-50">N<sup>o</sup></th>
            <th>RoleName</th>
            <th>Description</th>
            <th class="text-end mcol-200">Actions</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">
        @{
            var i = Model.Paging.StartRowNo;
        }
        @foreach (var m in Model)
        {
            <tr>
                <td>@i</td>
                <td>@m.RoleName</td>
                <td>@m.Description</td>
                <td class="text-end">
                    <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" modal-popup="" asp-action="EditRole" asp-controller="Identity" asp-route-id="@m.RoleId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                            <a class="dropdown-item" modal-popup="" asp-action="ManageRole" asp-controller="Identity" asp-route-roleId="@m.RoleId" modal-popup="" modal-size="xl"><i class="bx bx-check-shield me-2"></i>Assign Permission</a>
                            <a class="dropdown-item text-danger" modal-popup="" asp-action="DeleteRole" asp-controller="Identity" asp-route-id="@m.RoleId"><i class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                    </div>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

@await Html.PartialAsync("_pageList", Model.Paging) 