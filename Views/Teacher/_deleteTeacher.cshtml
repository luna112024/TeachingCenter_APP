@model UpdateTeacherDTO

<form asp-action="DeleteTeacherConfirmed" asp-controller="Teacher" method="post" autocomplete="off">
    <input type="hidden" asp-for="TeacherId" />
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Are you sure?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div>
            <strong>Are you sure you want to delete this teacher?</strong>
            <p class="mt-2">
                Teacher Code: <strong>@Model.TeacherCode</strong><br />
                Chinese Proficiency: @Model.ChineseProficiency<br />
                Employment Status: @Model.EmploymentStatus
            </p>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bx bx-x-circle me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="bx bx-trash me-1"></i>Delete
        </button>
    </div>
</form>
