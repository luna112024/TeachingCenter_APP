@model PageList<GetCompanyDTO>

@{
    GetCompanyDTO p = null;
}
<style>
    .bg-label-success {
        background-color: #e8fadf !important;
        color: #71dd37 !important;
        font-size: 11px;
        font-weight: 600;
    }

    .bg-label-secondary {
        background-color: #e4e6e8 !important;
        color: #8592a3;
        font-size: 11px;
        font-weight: 600;
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th class="mcol-50">N<sup>o</sup></th>
            <th>Company Name</th>
            <th>Description</th>
            <th>Address</th>
            <th>Email</th>
            <th>Status</th>
            <th class="text-end mcol-200">Actions</th>
        </tr>
    </thead>
    <tbody class="table-border-bottom-0">
        @{
            var i = Model.Paging.StartRowNo;
        }
        @foreach (var m in Model)
        {
        <tr>
            <td>@i</td>
            <td>@m.CompanyName</td>
            <td>@m.Description</td> 
            <td>@m.Address</td>
            <td>@m.Email</td>
            <td>
                @if (m.IsActive)
                {
                    <span class="badge bg-label-success text-capitalized">Active</span>
                }
                else
                {
                    <span class="badge bg-label-secondary text-capitalized">Inactive</span>
                }
            </td>
            <td class="text-end">
                <div class="dropdown">
                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" modal-popup="" modal-size="xl" asp-action="EditCompany" asp-controller="Company" asp-route-id="@m.CompanyId"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                        <a class="dropdown-item text-danger" modal-popup="" asp-action="DeleteCompany" asp-controller="Company" asp-route-id="@m.CompanyId"><i class="bx bx-trash me-1"></i> Delete</a>
                    </div>
                </div>
            </td>
        </tr>
        i++;
        }

    </tbody>
</table>

@await Html.PartialAsync("_pageList", Model.Paging)