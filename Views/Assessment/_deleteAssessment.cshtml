@model GetAssessmentDTO

<form asp-action="DeleteAssessmentConfirmed" asp-controller="Assessment" method="post" autocomplete="off">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Delete Assessment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
        <input type="hidden" asp-for="AssessmentId" />
        
        <div class="alert alert-danger">
            <i class="bx bx-error-circle me-2"></i>
            <strong>Warning!</strong> This action cannot be undone. Are you sure you want to delete this assessment?
        </div>

        <div class="row g-3">
            <div class="col-12 mb-2">
                <label class="form-label fw-semibold">Assessment Name</label>
                <div class="form-control-plaintext">@Model.AssessmentName</div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Assessment Type</label>
                <div class="form-control-plaintext">
                    <span class="badge bg-label-primary">@Model.AssessmentType</span>
                </div>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Max Score</label>
                <div class="form-control-plaintext">@Model.MaxScore</div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Weight Percentage</label>
                <div class="form-control-plaintext">@Model.WeightPercentage%</div>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Assessment Date</label>
                <div class="form-control-plaintext">@Model.AssessmentDate.ToString("MMM dd, yyyy")</div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Section</label>
                <div class="form-control-plaintext">@Model.SectionName (@Model.SectionCode)</div>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label fw-semibold">Course</label>
                <div class="form-control-plaintext">@Model.CourseName</div>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <div class="row g-3">
                <div class="col-12 mb-2">
                    <label class="form-label fw-semibold">Description</label>
                    <div class="form-control-plaintext">@Model.Description</div>
                </div>
            </div>
        }

        <div class="alert alert-warning mt-3">
            <i class="bx bx-info-circle me-2"></i>
            <strong>Note:</strong> If this assessment has recorded grades, it cannot be deleted.
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1"></i>Cancel</button>
        <button type="submit" class="btn btn-danger"><i class="bx bx-trash me-1"></i>Delete</button>
    </div>
</form>
