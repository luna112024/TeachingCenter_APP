@model DuplicateAssessmentDTO

<form asp-action="DuplicateAssessment" asp-controller="Assessment" method="post" autocomplete="off">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Duplicate Assessment</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
        <!-- Source Assessment Info -->
        @if (ViewBag.SourceAssessment != null)
        {
            var sourceAssessment = ViewBag.SourceAssessment as GetAssessmentDTO;
            <div class="alert alert-info">
                <h6 class="alert-heading">Source Assessment</h6>
                <p class="mb-1"><strong>@sourceAssessment.AssessmentName</strong> (@sourceAssessment.AssessmentType)</p>
                <p class="mb-0">Section: @sourceAssessment.SectionName (@sourceAssessment.SectionCode)</p>
            </div>
        }

        <!-- Duplication Settings -->
        <h6 class="mb-3">Duplication Settings</h6>
        <div class="row g-3">
            <div class="col-12 mb-2">
                <label class="form-label" asp-for="TargetSectionId">Target Section<span class="text-danger">*</span></label>
                <div class="searchable-select dropdown w-100"
                     data-name="TargetSectionId"
                     data-selected-value="@(Model?.TargetSectionId ?? Guid.Empty)"
                     data-url="@Url.Action("GetAllClassSections", "ClassSection")">
                    <button class="form-select w-100 text-start d-flex justify-content-between align-items-center"
                        type="button"
                        id="dropdownSearchButton"
                        data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <span class="text-secondary selected-section">
                        Select Target Section
                    </span>
                        <i class="bx bx-chevron-down ms-2 text-secondary"></i>
                    </button>
                    <ul class="dropdown-menu py-2 px-1"
                        aria-labelledby="dropdownSearchButton">
                        <div class="px-2">
                            <input type="text"
                                   class="form-control form-control-sm mb-2 dropdown-search-input"
                                   id="dropdownSearchInput"
                                   placeholder="Search Section.."
                                   autocomplete="off" />
                        </div>
                        <li><span class="dropdown-item text-muted small"><i class="bx bx-loader bx-spin"></i> Loading...</span></li>
                    </ul>
                </div>
                <span asp-validation-for="TargetSectionId" class="text-danger"></span>
            </div>
        </div>

        <!-- Optional Modifications -->
        <h6 class="mt-4 mb-3">Optional Modifications</h6>
        <div class="row g-3">
            <div class="col-12 mb-2">
                <label class="form-label" asp-for="NewAssessmentName">New Assessment Name</label>
                <input asp-for="NewAssessmentName" type="text" class="form-control" placeholder="Leave empty to keep original name"/>
                <span asp-validation-for="NewAssessmentName" class="text-danger"></span>
                <small class="text-muted">If empty, will use original name with "(Copy)" suffix</small>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="NewWeightPercentage">New Weight Percentage</label>
                <input asp-for="NewWeightPercentage" type="number" step="0.01" min="0" max="100" class="form-control" placeholder="Leave empty to keep original"/>
                <span asp-validation-for="NewWeightPercentage" class="text-danger"></span>
                <small class="text-muted">Percentage of total grade (0-100%)</small>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="NewAssessmentDate">New Assessment Date</label>
                <input asp-for="NewAssessmentDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="NewAssessmentDate" class="text-danger"></span>
                <small class="text-muted">Leave empty to keep original date</small>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-12 mb-2">
                <label class="form-label" asp-for="NewDueDate">New Due Date</label>
                <input asp-for="NewDueDate" type="datetime-local" class="form-control" />
                <span asp-validation-for="NewDueDate" class="text-danger"></span>
                <small class="text-muted">Leave empty to keep original due date</small>
            </div>
        </div>

        <div class="alert alert-warning">
            <i class="bx bx-info-circle me-2"></i>
            <strong>Note:</strong> All other properties (description, materials needed, max score) will be copied exactly from the source assessment.
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">Duplicate Assessment</button>
    </div>
</form>

<script>
$(function () {
    $('.searchable-select').each(function () {
        const $container = $(this);
        const $button = $container.find('button.form-select');
        const $dropdownMenu = $container.find('.dropdown-menu');
        const $searchInput = $container.find('.dropdown-search-input');
        const hiddenName = $container.data('name');
        let selectedValue = $container.data('selected-value') || '';
        const ajaxUrl = $container.data('url')?.trim() || null;

        let $hiddenInput = $container.find(`input[type="hidden"][name="${hiddenName}"]`);
        if (!$hiddenInput.length) {
            $hiddenInput = $('<input type="hidden">').attr('name', hiddenName);
            $container.append($hiddenInput);
        }
        $hiddenInput.val(selectedValue);

        function renderOptions(items) {
            $dropdownMenu.find('li').not(':first-child').remove();

            if (!Array.isArray(items)) {
                return $dropdownMenu.append('<li><a href="#" class="dropdown-item text-danger small">Invalid data format</a></li>');
            }

            if (items.length === 0) {
                return $dropdownMenu.append('<li><a href="#" class="dropdown-item text-muted small">No results found</a></li>');
            }

            items.forEach(item => {
                const isActive = (selectedValue.toString() === item.id.toString()) ? ' active' : '';
                const displayText = `${item.text} (${item.sectionCode})`;
                const $li = $(`
                    <li>
                        <a href="#" class="dropdown-item${isActive}" data-value="${item.id}" title="${item.text}">
                            ${displayText}
                        </a>
                    </li>
                `);
                $dropdownMenu.append($li);
                if (isActive) {
                    $button.find('.selected-section').text(item.text).removeClass('text-secondary');
                }
            });
        }

        function fetchOptions(query = '') {
            if (!ajaxUrl) return;

            $dropdownMenu.find('li').not(':first-child').remove();
            $dropdownMenu.append('<li><span class="dropdown-item text-muted small"><i class="bx bx-loader bx-spin"></i> Loading...</span></li>');

            $.ajax({
                url: ajaxUrl,
                method: 'GET',
                data: { q: query },
                dataType: 'json'
            })
                .done(function (data) {
                    console.log('Dropdown data received:', data);
                    renderOptions(data);
                })
                .fail(function (xhr, status, error) {
                    console.error('Dropdown AJAX error:', { xhr, status, error, url: ajaxUrl });
                    $dropdownMenu.find('li').not(':first-child').remove();
                    $dropdownMenu.append('<li><a href="#" class="dropdown-item text-danger small">Error loading data. Check console.</a></li>');
                });
        }

        $searchInput.on('input', function () {
            const query = $(this).val().toLowerCase();
            if (ajaxUrl) {
                fetchOptions(query);
            } else {
                $dropdownMenu.find('li').not(':first-child').each(function () {
                    const text = $(this).find('.dropdown-item').text().toLowerCase();
                    $(this).toggle(text.includes(query));
                });
            }
        });

        $container.on('show.bs.dropdown', function () {
            $searchInput.val('').focus();
            if (ajaxUrl) {
                fetchOptions('');
            } else {
                $dropdownMenu.find('li').show();
            }
        });

        $dropdownMenu.on('click', '.dropdown-item', function (e) {
            e.preventDefault();
            const $item = $(this);
            const newValue = $item.data('value');
            const newText = $item.text();

            selectedValue = newValue;
            $hiddenInput.val(newValue);
            $container.data('selected-value', newValue);
            
            $button.find('.selected-section').text(newText).removeClass('text-secondary');

            $dropdownMenu.find('.dropdown-item').removeClass('active');
            $item.addClass('active');

            const bsDropdown = bootstrap.Dropdown.getInstance($button[0]);
            if (bsDropdown) {
                bsDropdown.hide();
            }

            $container.trigger('itemSelected', { id: newValue, text: newText });
        });

        if (ajaxUrl) {
            fetchOptions('');
        }
    });

    // Set default new assessment date to 7 days from now
    var now = new Date();
    now.setDate(now.getDate() + 7);
    var localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
    $('#NewAssessmentDate').val(localDateTime);
});
</script>
