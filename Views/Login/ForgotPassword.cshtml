    Layout = "_LoginLayout";
    ViewData["Title"] = "Forgot Password - Hong Wen System";
}

<style>
/* Reset and base styles */
body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    overflow: hidden;
    height: 100vh;
    background: #f8f9fa;
}

/* Display section styles */
.display-section {
    background: linear-gradient(135deg, #3b5998 0%, #192f5d 100%);
    position: relative;
    overflow: hidden;
}

.bg-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.05);
    animation: floatCircle 20s ease-in-out infinite;
}

.bg-circle:nth-child(1) {
    width: 400px;
    height: 400px;
    top: -200px;
    left: -100px;
    animation-delay: 0s;
}

.bg-circle:nth-child(2) {
    width: 300px;
    height: 300px;
    bottom: -150px;
    right: -100px;
    animation-delay: 5s;
}

.bg-circle:nth-child(3) {
    width: 250px;
    height: 250px;
    top: 50%;
    right: -125px;
    animation-delay: 10s;
}

@@keyframes floatCircle {
    0%, 100% {
        transform: translate(0, 0) scale(1);
    }
    50% {
        transform: translate(30px, -30px) scale(1.1);
    }
}

.floating-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
}

.float-icon {
    position: absolute;
    width: 50px;
    height: 50px;
    background: rgba(255, 255, 255, 0.15);
    backdrop-filter: blur(8px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transform: scale(0) rotate(-180deg);
    animation: popFloat 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55) forwards;
}

.float-icon i {
    font-size: 20px;
    color: rgba(255, 255, 255, 0.9);
}

.float-icon:nth-child(1) { top: 25%; left: 15%; animation-delay: 0.1s; }
.float-icon:nth-child(2) { top: 25%; right: 15%; animation-delay: 0.2s; }
.float-icon:nth-child(3) { bottom: 25%; left: 15%; animation-delay: 0.3s; }
.float-icon:nth-child(4) {
    bottom: 25%;
    right: 15%;
    animation-delay: 0.4s;
}
.float-icon:nth-child(5) { top: 45%; right: 8%; animation-delay: 0.5s; }
.float-icon:nth-child(6) { top: 45%; left: 8%; animation-delay: 0.6s; }

@@keyframes popFloat {
    0% {
        opacity: 0;
        transform: scale(0) rotate(-180deg);
    }
    70% {
        opacity: 1;
        transform: scale(1.1) rotate(10deg);
    }
    100% {
        opacity: 1;
        transform: scale(1) rotate(0deg);
    }
}

@@keyframes gentleFloat {
    0%, 100% {
        transform: translateY(0px) rotate(0deg);
    }
    50% {
        transform: translateY(-15px) rotate(5deg);
    }
}

.welcome-content {
    position: relative;
    z-index: 5;
    max-width: 600px;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeUp 1s ease-out 0.3s forwards;
    text-align: center;
    margin: 0 auto;
}

.welcome-title {
    color: white;
    font-size: 3.5rem;
    font-weight: 800;
    line-height: 1.2;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
}

.welcome-text {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.1rem;
    line-height: 1.8;
    font-weight: 400;
    max-width: 450px;
    margin: 0 auto;
}

@@keyframes fadeUp {
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.dot {
    position: absolute;
    width: 6px;
    height: 6px;
    background: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    opacity: 0;
    animation: dotPop 0.4s ease-out forwards, dotPulse 3s ease-in-out infinite;
}

.dot:nth-child(1) { top: 12%; left: 45%; animation-delay: 0.2s; }
.dot:nth-child(2) { top: 35%; left: 25%; animation-delay: 0.4s; }
.dot:nth-child(3) { top: 65%; right: 35%; animation-delay: 0.6s; }
.dot:nth-child(4) { bottom: 25%; left: 40%; animation-delay: 0.8s; }
.dot:nth-child(5) { top: 55%; right: 45%; animation-delay: 1s; }

@@keyframes dotPop {
    to {
        opacity: 1;
    }
}

@@keyframes dotPulse {
    0%, 100% {
        transform: scale(1);
        opacity: 0.3;
    }
    50% {
        transform: scale(1.5);
        opacity: 0.6;
    }
}

/* Login section */
.login-section {
    background: #fdfff5;
    position: relative;
    min-width: 350px;
}

/* Login form container */
.login-form-container {
    width: 100%;
    max-width: 320px;
}

.logo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
}

/* Form styles */
.login-form {
    width: 100%;
}

input:focus,
.form-control:focus {
    box-shadow: none !important;
    outline: none;
    border-color: #86b7fe;
}

.title-detail {
    font-size: 14px;
}

.form-label {
    text-transform: none;
