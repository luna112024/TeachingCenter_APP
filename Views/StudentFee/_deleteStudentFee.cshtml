@model GetStudentFeeDTO

<div class="modal-header">
    <h5 class="modal-title" id="staticBackdropLabel">Delete Student Fee</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12">
            <div class="alert alert-warning" role="alert">
                <h6 class="alert-heading">Warning!</h6>
                <p class="mb-0">Are you sure you want to delete this student fee? This action cannot be undone.</p>
            </div>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-6 mb-2">
            <label class="form-label fw-semibold">Student</label>
            <div class="form-control-plaintext">
                <div class="d-flex flex-column">
                    <span class="fw-semibold">@(Model.StudentName ?? "-")</span>
                    <small class="text-muted">@(Model.StudentCode ?? "-")</small>
                </div>
            </div>
        </div>
        <div class="col-6 mb-2">
            <label class="form-label fw-semibold">Fee Name</label>
            <div class="form-control-plaintext">@(Model.FeeName ?? "-")</div>
        </div>
    </div>
    <div class="row g-3">
        <div class="col-6 mb-2">
            <label class="form-label fw-semibold">Amount</label>
            <div class="form-control-plaintext">
                <span class="fw-semibold">@Model.FinalAmount.ToString("C")</span>
            </div>
        </div>
        <div class="col-6 mb-2">
            <label class="form-label fw-semibold">Status</label>
            <div class="form-control-plaintext">
                @switch (Model.Status?.ToLower())
                {
                    case "pending":
                        <span class="badge bg-label-warning text-capitalized">@Model.Status</span>
                        break;
                    case "paid":
                        <span class="badge bg-label-success text-capitalized">@Model.Status</span>
                        break;
                    case "partial":
                        <span class="badge bg-label-info text-capitalized">@Model.Status</span>
                        break;
                    case "overdue":
                        <span class="badge bg-label-danger text-capitalized">@Model.Status</span>
                        break;
                    case "waived":
                        <span class="badge bg-label-secondary text-capitalized">@Model.Status</span>
                        break;
                    case "cancelled":
                        <span class="badge bg-label-secondary text-capitalized">@Model.Status</span>
                        break;
                    default:
                        <span class="badge bg-label-secondary text-capitalized">@Model.Status</span>
                        break;
                }
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1"></i>Cancel</button>
    <form asp-action="DeleteStudentFeeConfirmed" asp-controller="StudentFee" method="post" style="display: inline;">
        <input type="hidden" asp-for="StudentFeeId" />
        <button type="submit" class="btn btn-danger"><i class="bx bx-trash me-1"></i>Delete</button>
    </form>
</div>
