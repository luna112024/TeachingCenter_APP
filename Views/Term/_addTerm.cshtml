@model CreateTermDTO

<form asp-action="AddTerm" asp-controller="Term" method="post" autocomplete="off">
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Create Term</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="TermName">Term Name<span class="text-danger">*</span></label>
                <input asp-for="TermName" type="text" class="form-control" required placeholder="Enter Term Name.."/>
                <span asp-validation-for="TermName" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="TermCode">Term Code<span class="text-danger">*</span></label>
                <input asp-for="TermCode" type="text" class="form-control" required placeholder="Enter Term Code.."/>
                <span asp-validation-for="TermCode" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="AcademicYear">Academic Year<span class="text-danger">*</span></label>
                <input asp-for="AcademicYear" type="text" class="form-control" required placeholder="e.g., 2024-2025"/>
                <span asp-validation-for="AcademicYear" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="Status">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="StartDate">Start Date<span class="text-danger">*</span></label>
                <input asp-for="StartDate" type="date" class="form-control" required/>
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="EndDate">End Date<span class="text-danger">*</span></label>
                <input asp-for="EndDate" type="date" class="form-control" required/>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="RegistrationStart">Registration Start<span class="text-danger">*</span></label>
                <input asp-for="RegistrationStart" type="date" class="form-control" required/>
                <span asp-validation-for="RegistrationStart" class="text-danger"></span>
            </div>
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="RegistrationEnd">Registration End<span class="text-danger">*</span></label>
                <input asp-for="RegistrationEnd" type="date" class="form-control" required/>
                <span asp-validation-for="RegistrationEnd" class="text-danger"></span>
            </div>
        </div>
        <div class="row g-3">
            <div class="col-6 mb-2">
                <label class="form-label" asp-for="Iscurrent">Is Current Term</label>
                <div class="form-check">
                    <input class="form-check-input" asp-for="Iscurrent" type="checkbox">
                    <label class="form-check-label" asp-for="Iscurrent">
                        Set as Current Term
                    </label>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bx bx-x-circle me-1"></i>Close</button>
        <button type="submit" class="btn btn-primary"><i class="bx bx-save me-1"></i>Save</button>
    </div>
</form>
