@model UpdateTermDTO

<form asp-action="DeleteTermConfirmed" asp-controller="Term" method="post" autocomplete="off">
    <input type="hidden" asp-for="TermId" />
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Are you sure?</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <div>
            <strong>Are you sure you want to delete this term?</strong>
            <p class="mt-2">
                Term Name: <strong>@Model.TermName</strong><br />
                Term Code: <strong>@Model.TermCode</strong><br />
                Academic Year: @Model.AcademicYear
            </p>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
            <i class="bx bx-x-circle me-1"></i>Cancel
        </button>
        <button type="submit" class="btn btn-danger">
            <i class="bx bx-trash me-1"></i>Delete
        </button>
    </div>
</form>
